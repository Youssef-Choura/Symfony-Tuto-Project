{% extends 'template.html.twig' %}

{% block title %}Liste des personnes{% endblock %}

{% block body %}
    <div class="row ">
        {% for personne in personnes %}
            <div class="col-6 col-md-4">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{ personne.name }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{ personne.name }}{{ personne.firstname }}</h6>
                        <p class="card-text">Age : {{ personne.age }}</p>
                        <a href="{{ path('personne_details', {id: personne.id}) }}" class="card-link">Details</a>
                        <a href="{{ path('app_personne_delete', {id: personne.id}) }}" class="card-link">Delete</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    {% if ( isPaginated is defined ) and isPaginated %}
        <div class="row mt-2">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    {% if page != 1 %}
                        <li class="page-item"><a class="page-link"
                                                 href="{{ path('personne_list_All', {page: page-1, nb: nb}) }}">Previous</a>
                        </li>
                    {% endif %}
                    {% for currentPage in range(1, nbPage) %}
                        <li class="page-item {% if page == currentPage %}active{% endif %}"><a class="page-link"
                                                                                               href="{{ path('personne_list_All', {page: currentPage, nb: nb}) }}">{{ currentPage }}</a>
                        </li>
                    {% endfor %}
                    {% if page != nbPage %}
                        <li class="page-item"><a class="page-link"
                                                 href="{{ path('personne_list_All', {page: page+1, nb: nb}) }}">Next</a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    {% endif %}
{% endblock %}
